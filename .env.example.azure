# Información de la aplicación
APP_NAME="Mía Decoraciones"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://TU-APP.azurewebsites.net
APP_KEY=

# Logs
LOG_CHANNEL=stack
LOG_LEVEL=error

# Base de datos MySQL en Azure
DB_CONNECTION=mysql
DB_HOST=tu-server.mysql.database.azure.com
DB_PORT=3306
DB_DATABASE=mia_decoraciones
DB_USERNAME=tu_usuario
DB_PASSWORD=tu_password

# Configuraciones de Laravel
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=public
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Filament
FILAMENT_FILESYSTEM_DISK=public

# Email (por ahora en modo log)
MAIL_MAILER=log
MAIL_FROM_ADDRESS="info@miadecoracione.com"
MAIL_FROM_NAME="${APP_NAME}"